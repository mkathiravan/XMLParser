<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviwe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_pro"
    android:layout_marginLeft="@dimen/search_bar"
    android:layout_marginRight="@dimen/search_bar"
    android:layout_marginTop="@dimen/list_pro"
    android:clickable="false"

    android:focusable="false"
    android:foreground="#20FFFFFF"
    card_view:cardBackgroundColor="#20FFFFFF"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="@dimen/fab_button_diameter"

        android:gravity="center_vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spinner_right"
            android:text="Food Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/name"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:text="Rs.100"
            android:id="@+id/txtPrice"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:id="@+id/txt_ser_Type"
            android:paddingLeft="@dimen/spinner_right"
            android:text="Calories"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/txt_ser_Type"
            android:gravity="end"
            android:layout_below="@+id/name"
            android:visibility="visible"

            android:layout_alignParentRight="true"
            android:id="@+id/txtAssgnStatus"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff0000"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_basic" />

</android.support.v7.widget.CardView>